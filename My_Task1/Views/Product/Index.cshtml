@model IEnumerable<My_Task1.Models.Product>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 class="my-4">Products</h2>

    <div class="mb-3">
        @Html.ActionLink("Add New Product", "Add", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Brand</th>
                <th>Total Amount</th> <!-- New column -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice.ToString("C")</td> <!-- Formats as currency -->
                    <td>@product.ProductQuantity</td>
                    <td>@product.ProductBrand</td>
                    <td>@product.TotalAmount.ToString("C")</td> <!-- Display total amount -->
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = product.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = product.ProductID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this item?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

