@model IEnumerable<My_Task1.Models.Billing>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">Billings</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Billing ID</th>
                    <th>Customer Name</th>
                    <th>Total Amount</th>
                    <th>Billing Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var billing in Model)
                {
                    <tr>
                        <td>@billing.BillingID</td>
                        <td>@billing.CustomerName
                        </td>
                        <td>@billing.TotalAmount.ToString("C")</td>
                        <td>@(billing.BillingDate.HasValue ? billing.BillingDate.Value.ToShortDateString() : "N/A")</td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = billing.BillingID }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Delete", "Delete", new { id = billing.BillingID }, new { @class = "btn btn-sm btn-danger ml-2" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-right">
        @Html.ActionLink("Add New Billing", "Add", null, new { @class = "btn btn-success" })
    </div>
</div>
