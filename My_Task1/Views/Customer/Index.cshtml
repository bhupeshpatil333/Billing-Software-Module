@model IEnumerable<My_Task1.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 class="my-4">Customers</h2>

    <div class="mb-3">
        @Html.ActionLink("Add New Customer", "Add", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>Contact</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Gender</td>
                    <td>@customer.Contact</td>
                    <td>@customer.Email</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = customer.CustomerID }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = customer.CustomerID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this customer?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
